<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wind.recyclerviewexecise.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/to_rani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecyclerView　变换"/>

        <Button
            android:id="@+id/to_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecyclerView Gallery"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/to_complex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecyclerView ComplexLayout"/>

    </LinearLayout>



</LinearLayout>
